doctype html
html(lang="en")
  head
    title= pageTitle
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0")
    meta(name="groc-relative-root", content=relativeRoot)
    meta(name="groc-document-path", content=targetPath)
    - if (repositoryUrl)
      meta(name="groc-repository-url", content=repositoryUrl)
    link(rel="stylesheet", type="text/css", media="all", href=relativeRoot + "assets/style.css")

  body
    #file-area
      #meta
        - if (repositoryUrl)
          code.file-path
            a(href=repositoryUrl + '/blob/master/' + targetPath)= targetPath
        - else
          code.file-path= targetPath
      #document
        - for (var i in segments)
          .segment
            - if (segments[i].comments != '')
              div(class="comments " + (segments[i].accessClasses || ''))
                .wrapper!= segments[i].comments

            - if (segments[i].code != '')
              .code
                .wrapper!= segments[i].code

    script(type="text/javascript", src=relativeRoot + "toc.js")
    script(type="text/javascript", src=relativeRoot + "assets/libs.js")
    script(type="text/javascript", src=relativeRoot + "assets/behavior.js")
